@section Scripts{
    <script>
        $(document).ready(function()
        {
            $(".btnAddNewRetroItem").click(function()
            {
                var type = $(this).attr("data-type");
                $("#hiddenType").val(type);

                var modal = new bootstrap.Modal($('#add-new-modal'));
                modal.show()
            });
        });
    </script>
}




