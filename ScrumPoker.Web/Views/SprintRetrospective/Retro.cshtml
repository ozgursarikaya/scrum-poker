<!-- Signup modal content -->
<div id="add-new-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-body">
                
                <form class="px-3" action="#">

                    <div class="mb-3">
                        <label for="txtRetroItem" class="form-label">Retro Message</label>
                        <textarea class="form-control" rows="3" id="txtRetroItem" required=""></textarea>
                        <input type="hidden" value="0" id="hiddenType" />
                            
                    </div>

                    <div class="mb-3 d-grid">
                        <button class="btn btn-primary" type="submit" id="btnSaveRetroItem">Save</button>
                    </div>

